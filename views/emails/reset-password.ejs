<!-- views/emails/reset-password.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <style>
      .container {
        max-width: 600px;
        margin: auto;
        font-family: Arial, sans-serif;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
      }
      .header {
        background: linear-gradient(135deg, #ff6b6b 0%, #cc4444 100%);
        color: white;
        padding: 30px;
        text-align: center;
        border-radius: 10px 10px 0 0;
      }
      .content {
        padding: 30px;
        background: #ffffff;
      }
      .reset-box {
        background: #fff5f5;
        border: 2px dashed #ff6b6b;
        border-radius: 10px;
        padding: 20px;
        margin: 20px 0;
        text-align: center;
      }
      .otp-display {
        font-size: 32px;
        letter-spacing: 5px;
        color: #ff6b6b;
        font-weight: bold;
        margin: 15px 0;
        background: #fff;
        padding: 15px;
        border-radius: 5px;
        border: 1px solid #e0e0e0;
      }
      .security-steps {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        margin: 20px 0;
      }
      .security-steps h3 {
        color: #ff6b6b;
        margin-top: 0;
      }
      .footer {
        text-align: center;
        padding: 20px;
        background: #f8f9fa;
        color: #666;
        border-radius: 0 0 10px 10px;
      }
      .warning {
        background: #fff3cd;
        border-left: 4px solid #ffc107;
        padding: 15px;
        margin: 20px 0;
        font-size: 14px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>üîê Reset Your Password</h1>
        <p>We've Got You Covered</p>
      </div>
      <div class="content">
        <h2>Hello <%= name %>,</h2>
        <p>
          We received a request to reset your password. Don't worry, we're here
          to help!
        </p>

        <div class="reset-box">
          <h3>Your Password Reset Code</h3>
          <div class="otp-display"><%= otp %></div>
          <p>‚è∞ This code will expire in 10 minutes</p>
        </div>

        <div class="security-steps">
          <h3>üìù Next Steps:</h3>
          <ol style="color: #444">
            <li>Enter this code on the password reset page</li>
            <li>Create a strong new password</li>
            <li>Keep your new password secure</li>
          </ol>
        </div>

        <div class="warning">
          <strong>‚ö†Ô∏è Important:</strong>
          <p>
            If you didn't request this password reset, please secure your
            account immediately by:
          </p>
          <ul>
            <li>Changing your password</li>
            <li>Contacting our support team</li>
          </ul>
        </div>
      </div>
      <div class="footer">
        <p>
          ¬© <%= new Date().getFullYear() %> Cycle Store. All rights reserved.
        </p>
        <small>Questions? Contact us at security@cyclestore.com</small>
      </div>
    </div>
  </body>
</html>
